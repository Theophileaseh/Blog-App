<%= form_with model: @comment,  url: user_post_comments_path(post_id: params[:id]), local: true do |f| %>
  <div>
  <%= f.label :Comment %><br>
  <%= f.text_area :text, class: "add-comment-input", placeholder: "Type in your comment", required: true %>
  </div>
  
  <%= f.submit 'Add Comment' %>

<% end %>