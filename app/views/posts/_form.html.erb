<%= form_with model: @post, local: true do |f| %>

  <%= f.hidden_field :comments_counter, value: 0 %>
  <%= f.hidden_field :likes_counter, value: 0 %>
  
  <div>
  <%= f.label :title %><br>
  <%= f.text_field :title, required: true  %>
  </div>
  
  <div>
  <%= f.label :text %><br>
  <%= f.text_area :text, required: true  %>
  </div>

  <%= f.submit 'Add Post' %>

<% end %>