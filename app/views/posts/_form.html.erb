<%= form_with model: @post, url: user_posts_path, local: true do |f| %>

  
  <div>
  <%= f.label :title %><br>
  <%= f.text_field :title, required: true  %>
  </div>
  
  <div>
  <%= f.label :text %><br>
  <%= f.text_area :text, required: true  %>
  </div>

  <%= f.submit 'Add Post', class: "save-post-btn" %>



<% end %>