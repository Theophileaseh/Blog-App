


<%= render partial: "users/user" , locals: { user: @user } %>
 
<div class="post-container">
  <% @posts.each_with_index do |post, index| %>
    <%= render post %>
    

      <ul>
        <% post.comments.each do |comment| %>
          <%= render comment %>

          <% end %>
      </ul>
      <% end %>
</div>