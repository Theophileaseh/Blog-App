  <div id="<%= dom_id @post %>">
  <div class="single-post-info">
  <div class="post-title-comments-likes">
  <div class="post-title-user">
   <p class="post-title"><%= @post.title %> by</p>
   <p class="post-author"><%= @post.user.name %></p>
  </div>
  <div class="post-comments-likes">
  <p class= "number-of-comments">Comments: <%= @post.comments_counter %></p>
  <p class= "number-of-likes">Likes: <%= @post.likes_counter %></p>
   
  </div>
  </div>
  <div class="post-content">
  <p class="post-body"><%= @post.text %></p>
  <p><%= render partial: "likes/form", locals: { like: Like.new, user: @post.user} %></p>
  </div>
  <%= @post.most_recent_five_comments.each_with_index do |comment, index| %>
  <div class="post-user-comments">
    <p class="commenter-name">
    <%= comment.user.name %>:
  </p>


  <p class="user-comment">
    <%= comment.text %>
  </p>

  </div>
  <% end %>

    </div>
    </div>

  <div class="add-comment">
  <%= render partial: "comments/form", locals: { comment: Comment.new, user_id: @post.user_id, post: @post } %>
  
  </div>
  
  </div>
  
  
  


